laser "addcon pno1=10 pno2=3"
laser "addcon pno1=3 pno2=2"
laser "addcon pno1=2 pno2=1"
% Connections between out-loop and inner-loop
laser "addcon pno1=2 pno2=5"
laser "addcon pno1=5 pno2=2"
